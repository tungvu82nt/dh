# Netlify redirects for SPA and MIME types
/*    /index.html   200

# Handle assets with proper MIME types
/assets/*.js  /assets/:splat  200
/assets/*.css  /assets/:splat  200

# Force MIME types for JavaScript modules
/assets/index-*.js  /assets/:splat  200  Content-Type: application/javascript
/assets/vendor-*.js  /assets/:splat  200  Content-Type: application/javascript
/assets/*.js  /assets/:splat  200  Content-Type: application/javascript
